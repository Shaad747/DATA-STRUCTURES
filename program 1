#include <stdio.h>
#include<stdlib.h>
#define SIZE 5
struct stack {
    int top;
    int data[SIZE];
};
typedef struct stack STACK;
void push(STACK *s,int item){
    if(s->top==SIZE-1)
        printf("\nStack Overflow");
    else{
        s->data[++(s->top)]=item;
    }
}
int pop(STACK *s){
    if(s->top==-1){
        printf("\nStack UnderFlow");
        return -1;}
    else{
        return s->data[(s->top)--];
    }
}
void display(STACK s){
    int i;
    if(s.top==-1)
        printf("\nStack Empty");
    else{
        printf("\nStack Content:");
        for(i=s.top;i>=0;i++){
            printf("%d\n",s.data[i]);
        }
    }
}
int main() {
    int ch,item,del;
    STACK s;
    s.top=-1;
    for(;;){
    printf("\n1.PUSH");
    printf("\n2.POP");
    printf("\n3.DISPLAY");
    printf("\n4.EXIT");
    printf("\nEnter your choice:");
    scanf("%d",&ch);
    switch(ch){
        case 1:printf("Enter the element to be pushed:");
        scanf("%d",&item);
        push(&s,item);
        break;
        case 2:del=pop(&s);
        if(del!=-1)
            printf("\nElement to be popped:%d",del);
        break;
        case 3:display(s);
        break;
        default:exit(0);
        
    }
}
    return 0;
}
